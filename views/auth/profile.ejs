<%- include('../layout') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user"></i>
                    Profile
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <% if (user.avatar) { %>
                            <img src="<%= user.avatar %>" alt="Avatar" class="user-avatar mb-3" style="width: 120px; height: 120px;">
                        <% } else { %>
                            <i class="fas fa-user-circle" style="font-size: 120px; color: #6c757d;"></i>
                        <% } %>
                        
                        <div class="mt-3">
                            <span class="badge bg-primary provider-badge">
                                <i class="fas fa-<%= user.provider === 'google' ? 'google' : 'user' %>"></i>
                                <%= user.provider %>
                            </span>
                            
                            <% if (user.verified) { %>
                                <span class="badge bg-success provider-badge">
                                    <i class="fas fa-check"></i>
                                    Verified
                                </span>
                            <% } %>
                            
                            <% if (user.active) { %>
                                <span class="badge bg-success provider-badge">
                                    <i class="fas fa-circle"></i>
                                    Active
                                </span>
                            <% } else { %>
                                <span class="badge bg-warning provider-badge">
                                    <i class="fas fa-circle"></i>
                                    Inactive
                                </span>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="col-md-8">
                        <form action="/profile" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       value="<%= user.name %>" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" value="<%= user.email %>" readonly>
                                <div class="form-text">Email cannot be changed</div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Account Information</label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Created:</small><br>
                                        <span><%= new Date(user.createdAt).toLocaleDateString() %></span>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Last Updated:</small><br>
                                        <span><%= new Date(user.updatedAt).toLocaleDateString() %></span>
                                    </div>
                                </div>
                            </div>
                            
                            <% if (user.lastLoginAt) { %>
                                <div class="mb-3">
                                    <small class="text-muted">Last Login:</small><br>
                                    <span><%= new Date(user.lastLoginAt).toLocaleString() %></span>
                                </div>
                            <% } %>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>
                                    Update Profile
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 